<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/manage_area_toolbar"
        layout="@layout/app_toolbar_layout"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/add_area_link"
        android:layout_width="67dp"
        android:layout_height="52dp"
        android:layout_alignStart="@+id/manage_area_toolbar"
        android:layout_alignLeft="@+id/manage_area_toolbar"
        android:layout_marginStart="313dp"
        android:layout_marginLeft="313dp"
        android:src="@drawable/plus1"
        tools:ignore="MissingConstraints" />

    <ListView
        android:id="@+id/allAreas"
        android:layout_width="match_parent"
        android:layout_height="524dp"
        android:layout_alignTop="@+id/manage_area_toolbar"
        android:layout_marginTop="68dp"
        tools:ignore="MissingConstraints" />
</RelativeLayout>